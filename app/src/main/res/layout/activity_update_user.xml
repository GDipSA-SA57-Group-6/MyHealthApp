<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UpdateUser">
    <TextView
        android:id="@+id/updateUserTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textSize="40sp"
        android:gravity="center"
        android:text="Update My Details"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/updateUserDesTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textSize="15sp"
        android:gravity="center"
        android:text="Update information as needed:"
        android:layout_marginBottom="1dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="100dp"
        android:text="User Id" />

    <EditText
        android:id="@+id/txtUserId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:ems="10"
        android:inputType="none"
        android:focusable="false"
        android:cursorVisible="false"
        android:layout_marginTop="15dp"
        android:background="#F0F0F0"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="100dp" />

    <EditText
        android:id="@+id/txtUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:ems="10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password (At least 1 letter and 1 number)"
        android:layout_marginLeft="100dp" />

    <EditText
        android:id="@+id/txtPassword"
        android:inputType="textPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:ems="10"
        android:onClick="onPasswordEditTextClick" />

    <!-- Confirm Password TextView -->
    <TextView
        android:id="@+id/confirmPasswordLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password"
        android:layout_marginLeft="100dp"
        android:visibility="gone" />

    <!-- Confirm Password EditText -->
    <EditText
        android:id="@+id/txtPasswordConfirm"
        android:inputType="textPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:ems="10"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Birth Date (Year-Month-Day)"
        android:layout_marginLeft="100dp" />

    <EditText
        android:id="@+id/txtBirthDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:ems="10" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Address"
        android:layout_marginLeft="100dp" />


    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:ems="10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:layout_marginLeft="100dp" />


    <EditText
        android:id="@+id/txtGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:ems="10"
        android:inputType="none"
        android:focusable="false"
        android:layout_marginTop="15dp"
        android:background="#F0F0F0"
        android:cursorVisible="false"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btnReturn"
            android:layout_width="118dp"
            android:layout_height="50dp"
            android:text="Return to My Account Info"
            android:textSize="12dp"
            android:textAllCaps="false"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:textSize="12dp"
            android:textAllCaps="false"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="1dp"
            android:text="Confirm Update"/>

    </LinearLayout>



</LinearLayout>