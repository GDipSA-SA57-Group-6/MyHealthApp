        <meta-data
            android:name="TencentMapSDK"
            android:value="3VZBZ-WR4CZ-6PRXU-TP2PE-LJOWO-XVFQH" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/maps_api_key"/>


    </application>

</manifest>